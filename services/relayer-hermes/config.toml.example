# Hermes IBC Relayer — config.toml example
# Copy to persistent-data/config.toml and edit with your chains and endpoints.
# See README.md, "Config fields" section, for what each field is and where to get values.

[global]
log_level = 'info'

# ——— Chain A ———
# id = Official chain ID (e.g. cosmoshub-4, osmosis-1), not a local alias
# account_prefix = Bech32 address prefix for this chain (cosmos, osmo, infinite...)
# store_prefix = Usually "ibc" on Cosmos SDK chains
# event_source = How Hermes receives IBC events: push (WebSocket) or pull (polling). URL must match RPC host.
# gas_price = Fee for relay txs; use the chain's native denom (e.g. uatom, stake, uosmo) and a suitable price.
[[chains]]
id = 'infinite_421018001-1'
rpc_addr = 'https://comet-rpc-testnet.infinitedrive.xyz'
grpc_addr = 'https://grpc-testnet.infinitedrive.xyz:443'
event_source = { mode = 'push', url = 'wss://comet-rpc-testnet.infinitedrive.xyz/websocket', batch_delay = '500ms' }
account_prefix = 'infinite'
key_name = 'relayer-testnet'
store_prefix = 'ibc'
gas_price = { price = 0.001, denom = 'tdrop' }

# ——— Chain B ———
[[chains]]
id = 'qom_766-1'
rpc_addr = 'https://rpc.foxxone.one'
grpc_addr = 'http://rpc.foxxone.one:9090'
event_source = { mode = 'push', url = 'wss://rpc.foxxone.one/websocket', batch_delay = '500ms' }
account_prefix = 'qom'
key_name = 'relayer-qom'
store_prefix = 'ibc'
gas_price = { price = 10, denom = 'aqom' }
address_type = { derivation = 'ethermint', proto_type = { pk_type = '/ethermint.crypto.v1.ethsecp256k1.PubKey' } }